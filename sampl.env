# Copy this file to .env and fill values as needed

# Paths
PDF_SOURCE_DIR=training_data
CHROMA_PATH=data/chroma

# Runners
LLM_RUNNER=lmstudio
LLM_BASE_URL=http://localhost:1234
# Set to the chat model id loaded in LM Studio (see GET /v1/models)
LLM_MODEL_ID=<your_lmstudio_chat_model_id>

# Embeddings
EMBEDDINGS_PROVIDER=lmstudio
EMBEDDINGS_BASE_URL=http://localhost:1234
EMBEDDINGS_MODEL_ID=text-embedding-qwen3-embedding-4b

# Retrieval defaults
TOP_K=8
SIMILARITY_THRESHOLD=0.7

# VLM OCR (enabled for pages without text or low text)
VLM_PROVIDER=openai
VLM_MODEL_ID=gpt-5-mini
OCR_VLM_ENABLED=true
OCR_LOW_TEXT_ENABLED=true
OCR_LOW_TEXT_THRESHOLD_CHARS=200
OPENAI_API_KEY=<your_openai_key>

# UI (frontend) origin for CORS
UI_ORIGIN=http://localhost:5174
